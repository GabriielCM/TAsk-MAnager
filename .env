# Configurações da Aplicação Flask
FLASK_APP=run.py
FLASK_ENV=development  # Altere para 'production' em ambiente de produção
SECRET_KEY=chave-secreta-da-aplicacao-altere-para-uma-string-segura
DEBUG=True  # Defina como False em ambiente de produção

# Banco de Dados
# SQLite (para desenvolvimento)
DEV_DATABASE_URL=sqlite:///data-dev.sqlite
TEST_DATABASE_URL=sqlite:///data-test.sqlite

# PostgreSQL (para produção)
# DATABASE_URL=postgresql://username:password@localhost/databasename

# Configurações JWT
JWT_SECRET_KEY=chave-jwt-secreta-altere-para-uma-string-segura
JWT_ACCESS_TOKEN_EXPIRES=3600  # Tempo de expiração do token em segundos (1 hora)

# Configurações de Email (para notificações)
MAIL_SERVER=smtp.googlemail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app
MAIL_DEFAULT_SENDER=seu-email@gmail.com

# Configuração da API GPT
GPT_API_KEY=sua-chave-api-gpt
GPT_API_URL=https://api.openai.com/v1/chat/completions

# Fusos horários
TIMEZONE=America/Sao_Paulo